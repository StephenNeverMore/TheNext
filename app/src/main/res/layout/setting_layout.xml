<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#00000000"
        android:gravity="center"
        android:visibility="invisible"
        android:text="@string/setting_cancel_tv"
        android:textSize="25sp"
        android:id="@+id/setting_cancel_btn"
        android:layout_below="@+id/setting_btn_a"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="45dp" />

    <Button
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/setting_btn_a"
        android:visibility="invisible"
        android:background="@drawable/timer"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/setting_btn_b"
        android:visibility="invisible"
        android:background="@drawable/timer"
        android:layout_alignTop="@+id/setting_btn_a"
        android:layout_toRightOf="@+id/setting_btn_a"
        android:layout_toEndOf="@+id/setting_btn_a"
        android:layout_marginLeft="45dp"
        android:layout_marginStart="45dp" />

    <Button
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/setting_btn_c"
        android:background="@drawable/timer"
        android:visibility="invisible"
        android:layout_alignTop="@+id/setting_btn_a"
        android:layout_toLeftOf="@+id/setting_btn_a"
        android:layout_toStartOf="@+id/setting_btn_a"
        android:layout_marginRight="45dp"
        android:layout_marginEnd="45dp" />

    <Button
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/setting_btn_d"
        android:visibility="invisible"
        android:layout_above="@+id/setting_btn_a"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="45dp"
        android:background="@drawable/timer" />

    <Button
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/setting_btn_e"
        android:visibility="invisible"
        android:background="@drawable/timer"
        android:layout_alignTop="@+id/setting_btn_d"
        android:layout_alignLeft="@+id/setting_btn_b"
        android:layout_alignStart="@+id/setting_btn_b" />

    <Button
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/setting_btn_f"
        android:visibility="invisible"
        android:background="@drawable/timer"
        android:layout_alignTop="@+id/setting_btn_d"
        android:layout_alignLeft="@+id/setting_btn_c"
        android:layout_alignStart="@+id/setting_btn_c" />


</RelativeLayout>